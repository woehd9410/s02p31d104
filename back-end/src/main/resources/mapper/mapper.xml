<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.help.back.backend.dao.UserDao">
    <select id="getUsers"  resultType="com.help.back.backend.domain.User">
        select * from users
    </select>
    <select id="getUsersByName" parameterType="String" resultType="com.help.back.backend.domain.User">
        select * from users where name LIKE "%${value}%"
    </select>
    <select id="getUsersByEmail" parameterType="String" resultType="com.help.back.backend.domain.User">
        select * from users where email LIKE "%${value}%"
    </select>
    <select id="getUsersById" parameterType="int" resultType="com.help.back.backend.domain.User">
        select * from users where user_id = #{value}
    </select>
    <insert id="postUser" parameterType="com.help.back.backend.domain.User">
        INSERT INTO
        users(password, name, email, birthday, phone_number)
        Values(#{password}, #{name}, #{email}, #{birthday}, #{phone_number})
    </insert>
    <update id="updateUser" parameterType="com.help.back.backend.domain.User">
        UPDATE users SET password = #{password}, name = #{name}, email = #{email}, birthday = #{birthday}, phone_number = #{phone_number}
        WHERE user_id = #{user_id}
    </update>
    <delete id="deleteUser" parameterType="int">
        DELETE FROM users WHERE user_id = #{value}
    </delete>
</mapper>